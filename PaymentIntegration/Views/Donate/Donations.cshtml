@{
    ViewData["Title"] = "Donations";
    var transactions = ViewData["transaction"] as List<TransactionModel>;
}
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var transaction in transactions)
            {
                <tr>
                    <td>@transaction.Name</td>
                    <td>@transaction.Email</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.TrfRef</td>
                </tr>
            }
        </tbody>
    </table>
</div>
